@using System.Security.Claims
@inject KursachBD.Pages.CartService _cartService

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kirov Tech</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">
                     Kirov Tech
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                  
                    <ul class="navbar-nav flex-grow-1 align-items-center gap-2">
                        <li class="nav-item">
                            
                            <a class="btn btn-link text-decoration-none text-dark" asp-page="/Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary px-4 rounded-pill" asp-page="/Catalog">
                                <i class="bi bi-grid-fill me-1"></i> Каталог
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center gap-2">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            int cartCount = 0;
                            var userIdClaim = User.FindFirst(ClaimTypes.NameIdentifier);

                            
                            if (userIdClaim != null && long.TryParse(userIdClaim.Value, out long uid))
                            {
                                cartCount = await _cartService.GetCartCountAsync(uid);
                            }

                            <li class="nav-item me-2">
                                
                                <a class="btn btn-outline-dark position-relative border-0" asp-page="/Cart">
                                    
                                    <i class="bi bi-cart3 fs-5"></i>
                                    <span id="globalCartCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @cartCount
                                        <span class="visually-hidden">товаров</span>
                                    </span>
                                    Корзина
                                </a>
                                
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark fw-bold" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><span class="dropdown-item-text text-muted small">Личный кабинет</span></li>

                                    
                                    <li><a class="dropdown-item" href="#" onclick="openUserHistory(event)"><i class="bi bi-clock-history"></i> История заказов</a></li>
                                    

                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="/Authoriz?handler=Logout">
                                            <i class="bi bi-box-arrow-right"></i> Выйти
                                        </a>
                                    </li>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary btn-sm me-2" asp-page="/Authoriz">Вход</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-page="/Register">Регистрация</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3 bg-light">
        <div class="container text-center">
            &copy; 2026 - Kirov Tech - <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    <div class="modal fade" id="globalUserHistoryModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-basket"></i> Мои покупки</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- Загрузка -->
                    <div id="globalHistoryLoader" class="text-center py-3">
                        <div class="spinner-border text-primary" role="status"></div>
                    </div>

                    <!-- Таблица -->
                    <div class="table-responsive d-none" id="globalHistoryTableWrap">
                        <table class="table table-striped table-hover table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Дата</th>
                                    <th>Заказ</th>
                                    <th>Товар</th>
                                    <th>Кол-во</th>
                                    <th class="text-end">Сумма</th>
                                </tr>
                            </thead>
                            <tbody id="globalHistoryBody"></tbody>
                        </table>
                    </div>

                    <!-- Сообщение "Пусто" -->
                    <div id="globalHistoryEmpty" class="text-center py-4 d-none">
                        <p class="text-muted">История покупок пуста.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Функция открытия истории
        async function openUserHistory(e) {
            e.preventDefault();

            
            const modalEl = document.getElementById('globalUserHistoryModal');
            const modal = new bootstrap.Modal(modalEl);
            modal.show();

            
            const loader = document.getElementById('globalHistoryLoader');
            const tableWrap = document.getElementById('globalHistoryTableWrap');
            const emptyMsg = document.getElementById('globalHistoryEmpty');
            const tbody = document.getElementById('globalHistoryBody');

            loader.classList.remove('d-none');
            tableWrap.classList.add('d-none');
            emptyMsg.classList.add('d-none');
            tbody.innerHTML = '';

            try {
                //Запрос к CatalogModel (параметры не нужны, сервер возьмет ID из куки)
                const response = await fetch('/Catalog?handler=CustomerHistory');
                const json = await response.json();

                loader.classList.add('d-none');

                if (json.success && json.data && json.data.length > 0) {
                    //Заполнение таблицы
                    json.data.forEach(item => {
                        const dateStr = new Date(item.order_date).toLocaleDateString('ru-RU');
                        const row = `
                            <tr>
                                <td>${dateStr}</td>
                                <td>${item.order_number}</td>
                                <td class="fw-bold">${item.product_name} <br><small class="text-muted fw-normal">${item.product_type}</small></td>
                                <td class="text-center">${item.quantity}</td>
                                <td class="text-end">${item.total_price.toLocaleString('ru-RU')} ₽</td>
                            </tr>`;
                        tbody.innerHTML += row;
                    });
                    tableWrap.classList.remove('d-none');
                } else {
                    emptyMsg.classList.remove('d-none');
                }
            } catch (error) {
                console.error(error);
                loader.classList.add('d-none');
                alert('Ошибка загрузки данных');
            }
        }
    </script>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>