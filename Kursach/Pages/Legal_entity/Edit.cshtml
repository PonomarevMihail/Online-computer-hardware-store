            </div>
            <div class="form-group">
                
                <label asp-for="LegalEntity.Company" class="control-label"></label>
                <input asp-for="LegalEntity.Company" class="form-control" />
                <span asp-validation-for="LegalEntity.Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="LegalEntity.Phone" class="control-label"></label>
                <input asp-for="LegalEntity.Phone" class="form-control" />
                <span asp-validation-for="LegalEntity.Phone" class="text-danger"></span>
