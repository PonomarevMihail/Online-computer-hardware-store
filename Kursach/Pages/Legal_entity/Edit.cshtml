            </div>
            
            <div class="form-group">
                <label asp-for="LegalEntity.Name" class="control-label"></label>
                <input asp-for="LegalEntity.Name" class="form-control" />
                <span asp-validation-for="LegalEntity.Name" class="text-danger"></span>
