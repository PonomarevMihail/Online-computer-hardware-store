@page
@model KursachBD.Pages.Role.DetailsModel

@{
    ViewData["Title"] = "Информация о роли";
}

<h1>Информация</h1>

<div>
    <h4>Роль</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.JobTitle)
        </dd>


        <dt class="col-sm-2">
