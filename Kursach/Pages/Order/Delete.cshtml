@page
@model KursachBD.Pages.Order.DeleteModel

@{
    ViewData["Title"] = "Удалить заказ";
}

<h1>Delete</h1>

<h3>Вы действительно хотите это удалить?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Price)
        </dd>
        <dt class="col-sm-2">
            Адрес доставки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.DeliveryAddress)
        </dd>
        <dt class="col-sm-2">
            Комментарий
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Comment)
        </dd>
        <dt class="col-sm-2">
            Номер клиента
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CustomerId)
        </dd>
        <dt class="col-sm-2">
            Дата доставки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.DeliveryDate)
        </dd>
        <dt class="col-sm-2">
            Дата оплаты
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.PaymentDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Order.NumberOfOrder" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Вернуться к списку</a>
    </form>
</div>
