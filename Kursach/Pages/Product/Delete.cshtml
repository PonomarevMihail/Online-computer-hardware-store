@page
@model KursachBD.Pages.Product.DeleteModel

@{
    ViewData["Title"] = "Удаление товара";
}

<h1>Удаление</h1>

<!-- Блок вывода ошибки -->
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        <strong>Ошибка!</strong> @Model.ErrorMessage <br />
        <small>
            Вы не можете удалить этот товар, так как он используется в истории заказов или имеет отзывы.
            Вместо удаления рекомендуется установить количество на складе (Stock) равным 0 через меню "Редактировать".
        </small>
    </div>
}

<h3>Вы уверены, что хотите удалить этот товар?</h3>
<div>
    <h4>Товар</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            Характеристики
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Characteristics)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            Производитель
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Manufacturer)
        </dd>
        <dt class="col-sm-2">
            Остаток на складе
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Stock)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.ProductId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Назад к списку</a>
    </form>
</div>